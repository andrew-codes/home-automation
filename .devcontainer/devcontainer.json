{
  "name": "Home Automation",
  "dockerFile": "Dockerfile",

  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },

  "extensions": [
    "capaj.vscode-exports-autocomplete",
    "christian-kohler.npm-intellisense",
    "cmstead.jsrefactor",
    "dbaeumer.vscode-eslint",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "foxundermoon.shell-format",
    "fredwangwang.vscode-hcl-format",
    "Grafana.vscode-jsonnet",
    "hashicorp.terraform",
    "humao.rest-client",
    "keesschollaart.vscode-home-assistant",
    "kisstkondoros.vscode-codemetrics",
    "mikestead.dotenv",
    "ms-azuretools.vscode-docker",
    "paulmolluzzo.convert-css-in-js",
    "pflannery.vscode-versionlens",
    "silvenon.mdx",
    "wallabyjs.wallaby-vscode"
  ],

  "forwardPorts": [],

  "mounts": [
    "source=${localWorkspaceFolder}/deployments/k8s/.secrets/.kube,target=/root/.kube,type=bind",
    "source=${localEnv:HOME}/.ssh/id_rsa,target=/root/.ssh/id_rsa,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind"
  ],

  "postStartCommand": "wrapdocker.sh",
  "runArgs": ["--privileged", "--network=host"]
}
