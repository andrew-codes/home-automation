{
  "name": "Home Automation",
  "dockerFile": "Dockerfile",

  "settings": {
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "bash",
        "icon": "terminal-bash"
      }
    },
    "workbench.colorTheme": "Default Dark+"
  },

  "extensions": [
    "andrew-codes.jest-snippets",
    "capaj.vscode-exports-autocomplete",
    "christian-kohler.npm-intellisense",
    "cmstead.js-codeformer",
    "dbaeumer.vscode-eslint",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "foxundermoon.shell-format",
    "fredwangwang.vscode-hcl-format",
    "Grafana.vscode-jsonnet",
    "hashicorp.terraform",
    "humao.rest-client",
    "influxdata.flux",
    "jasonnutter.search-node-modules",
    "keesschollaart.vscode-home-assistant",
    "kisstkondoros.vscode-codemetrics",
    "mikestead.dotenv",
    "ms-azuretools.vscode-docker",
    "paulmolluzzo.convert-css-in-js",
    "pflannery.vscode-versionlens",
    "silvenon.mdx",
    "wallabyjs.wallaby-vscode"
  ],

  "forwardPorts": [],

  "mounts": [
    "source=${localWorkspaceFolder}/deployments/k8s/.secrets/.kube,target=/root/.kube,type=bind",
    "source=${localEnv:HOME}/.ssh/id_rsa,target=/root/.ssh/id_rsa,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind"
  ],
  "remoteUser": "vscode",
  "initializeCommand": "bash .devcontainer/save-config.sh",
  "postStartCommand": "bash -c './devcontainer/start-openvpn.sh && .devcontainer/wrapdocker.sh'",
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--device=/dev/net/tun",
    "--privileged"
  ]
}
