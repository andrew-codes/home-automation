{
  "npmScope": "@ha",
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "compile",
          "generate",
          "test",
          "lint",
          "package",
          "prepare",
          "prestart"
        ]
      }
    }
  },
  "targetDependencies": {
    "generate": [
      {
        "target": "prepare",
        "projects": "dependencies"
      },
      {
        "target": "prepare",
        "projects": "self"
      },
      {
        "target": "generate",
        "projects": "dependencies"
      },
      {
        "target": "generate",
        "projects": "self"
      }
    ],
    "compile": [
      {
        "target": "prepare",
        "projects": "dependencies"
      },
      {
        "target": "prepare",
        "projects": "self"
      },
      {
        "target": "generate",
        "projects": "dependencies"
      },
      {
        "target": "generate",
        "projects": "self"
      },
      {
        "target": "compile",
        "projects": "dependencies"
      },
      {
        "target": "compile",
        "projects": "self"
      }
    ],
    "serve": [
      {
        "target": "prepare",
        "projects": "dependencies"
      },
      {
        "target": "prepare",
        "projects": "self"
      },
      {
        "target": "generate",
        "projects": "dependencies"
      },
      {
        "target": "generate",
        "projects": "self"
      },
      { "target": "prestart", "projects": "self" }
    ],
    "prepare": [
      {
        "target": "prepare",
        "projects": "dependencies"
      },
      {
        "target": "prepare",
        "projects": "self"
      }
    ],
    "package": [
      {
        "target": "compile",
        "projects": "self"
      },
      {
        "target": "package",
        "projects": "dependencies"
      }
    ]
  },
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
