{
  "exclude": ["node_modules", "apps/*/src/**/__tests__/*.*"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "paths": {
      "@ha/mqtt-client": ["apps/*/dist/packages/mqtt-client/src"],
      "@ha/unifi-client": ["apps/*/packages/unifi-client/src"]
    }
  }
}
