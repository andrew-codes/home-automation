{
  "private": true,
  "name": "@ha/game-cache-app",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "scripts/bin/start.sh",
    "start/dev": "nodemon src/index.ts --inspect=0.0.0.0:9233",
    "compile": "ncc build src/index.ts -o dist -m",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"$DOCKER_REGISTRY_DOMAIN:5000/game-cache:latest\" --context dir:///workspace/ --insecure --cache=true"
  },
  "dependencies": {
    "@ha/string-utils": "^0.0.1",
    "async-mqtt": "^2.6.1",
    "debug": "^4.3.1",
    "igdb-api-node": "^5.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^3.6.3",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@ha/ts-config": "^0.0.1",
    "@zeit/ncc": "^0.22.3",
    "nodemon": "^2.0.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  }
}
