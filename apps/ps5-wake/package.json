{
  "private": true,
  "name": "@ha/ps5-wake-app",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "ncc build src/index.ts -o dist -m",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"$docker-registry/ps5-wake:latest\" --context dir:///workspace/ --insecure --cache=true",
    "start": "scripts/bin/start.sh",
    "start/dev": "nodemon src/index.ts --inspect=0.0.0.0:9233"
  },
  "dependencies": {
    "async-mqtt": "^2.6.1",
    "debug": "^4.3.1",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@ha/ts-config": "^0.0.1",
    "@zeit/ncc": "^0.22.3",
    "nodemon": "^2.0.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  }
}
