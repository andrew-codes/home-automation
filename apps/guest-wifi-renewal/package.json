{
  "private": true,
  "name": "@ha/guest-wifi-renewal-app",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist .test-runs",
    "compile": "node -r esbuild-register build.ts",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/guest-wifi-renewal:latest\" --context dir:///workspace/ --insecure --cache=true",
    "start/dev": "nodemon src/index.ts --inspect=0.0.0.0:9233",
    "start": "scripts/bin/start.sh",
    "test": "jest"
  },
  "nx": {
    "targets": {
      "clean": {
        "outputs": [
          "dist"
        ]
      },
      "compile": {
        "outputs": [
          "dist"
        ]
      },
      "image/push": {
        "dependsOn": [
          {
            "target": "compile",
            "projects": "self"
          }
        ]
      },
      "test": {
        "outputs": [
          ".test-runs/unit"
        ]
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@ha/configure-jest": "^0.0.1",
    "@ha/mqtt-client": "^0.0.1",
    "@ha/unifi-client": "^0.0.1",
    "async-mqtt": "^2.6.1",
    "debug": "^4.3.1",
    "esbuild-register": "^3.3.2",
    "jest-when": "^3.2.1",
    "nodemon": "^2.0.6"
  }
}
