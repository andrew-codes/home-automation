{
  "root": "apps/game-room-remote",
  "sourceRoot": "apps/game-room-remote/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["dist", ".test-runs"],
      "options": {
        "command": "rm -rf dist .test-runs",
        "cwd": "apps/game-room-remote"
      }
    },
    "compile": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["apps/game-room-remote/dist"],
      "options": {
        "command": "next build",
        "cwd": "apps/game-room-remote"
      }
    },
    "deploy": {
      "executor": "@ha/nx-executors:invoke",
      "options": {
        "cwd": "apps/game-room-remote",
        "module": "scripts/deploy.ts"
      },
      "dependsOn": [
        {
          "target": "image/push",
          "projects": "self"
        },
        {
          "target": "deploy",
          "projects": "dependencies"
        }
      ]
    },
    "image/push": {
      "executor": "@ha/nx-executors:invoke",
      "dependsOn": [
        {
          "target": "compile",
          "projects": "self"
        }
      ],
      "options": {
        "cwd": "apps/game-room-remote",
        "module": "scripts/image-push.ts"
      }
    },
    "serve": {
      "executor": "@ha/nx-executors:telepresence-local",
      "options": {
        "cwd": "apps/game-room-remote",
        "port": 80,
        "command": "next dev -p 80"
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [".test-runs/unit"],
      "options": {
        "command": "jest",
        "cwd": "apps/game-room-remote"
      }
    },
    "code-coverage": {
      "executor": "@ha/nx-executors:upload-codecov",
      "options": {
        "coverageFilePath": "apps/game-room-remote/.test-runs/unit/lcov.info"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["mqtt", "secrets"]
}
