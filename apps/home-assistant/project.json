{
  "root": "apps/home-assistant",
  "sourceRoot": "apps/home-assistant/src",
  "projectType": "application",
  "targets": {
    "image/push": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [
        {
          "target": "image/push/pre",
          "projects": "self"
        }
      ],
      "options": {
        "command": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/home-assistant:latest\" --context dir:///workspace/ --insecure --cache=true",
        "cwd": "apps/home-assistant"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/home-assistant",
        "commands": "scripts/bin/deploy.sh",
        "dependsOn": [
          {
            "target": "image/push",
            "projects": "self"
          }
        ]
      }
    },
    "initialize-secrets": {
      "executor": "@ha/nx-executors:initialize-secrets",
      "options": {
        "keyVaultName": "kv-home-automation",
        "secrets": [
          "home-assistant-APPDAEMON-URL",
          "home-assistant-DOUBLE-TAKE-TOKEN",
          "home-assistant-ELEVATION",
          "home-assistant-GAMING-ROOM-GAMING-PC-IP",
          "home-assistant-GAMING-ROOM-GAMING-PC-MAC",
          "home-assistant-GAMING-ROOM-MACHINE-USERNAME",
          "home-assistant-GAMING-ROOM-NVIDIA-SHIELD-IP",
          "home-assistant-GAMING-ROOM-PLAYSTATION-5-IP",
          "home-assistant-GAMING-ROOM-TV-IP",
          "home-assistant-GAMING-ROOM-TV-MAC",
          "home-assistant-GITHUB-ISSUE-TOKEN",
          "home-assistant-GOOGLE-CALENDAR-CLIENT-ID",
          "home-assistant-GOOGLE-CALENDAR-CLIENT-SECRET",
          "home-assistant-HA-TOKEN",
          "home-assistant-HA-URL",
          "home-assistant-HOME-AUTOMATION-PRIVATE-SSH-KEY",
          "home-assistant-HOME-AUTOMATION-PUBLIC-SSH-KEY",
          "home-assistant-JIRA-AUTHORIZATION-HEADER",
          "home-assistant-LATITUDE",
          "home-assistant-LONGITUDE",
          "home-assistant-POSTGRES-DB",
          "home-assistant-POSTGRES-PASSWORD",
          "home-assistant-POSTGRES-USER",
          "home-assistant-PROXMOX-HOST",
          "home-assistant-PROXMOX-PASSWORD",
          "home-assistant-PROXMOX-USERNAME",
          "home-assistant-ROUTER-IP",
          "home-assistant-SPOTCAST-DC-2",
          "home-assistant-SPOTCAST-DC",
          "home-assistant-SPOTCAST-KEY-2",
          "home-assistant-SPOTCAST-KEY",
          "home-assistant-SPOTIFY-CLIENT-ID",
          "home-assistant-SPOTIFY-CLIENT-SECRET",
          "home-assistant-TIME-ZONE",
          "home-assistant-UNIT-SYSTEM",
          "home-assistant-WITHINGS-CLIENT-ID",
          "home-assistant-WITHINGS-CLIENT-SECRET"
        ]
      }
    },
    "image/push/pre": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "mkdir -p dist && cp ../home-assistant-config-applicator/sync.sh dist/sync.sh",
        "cwd": "apps/home-assistant"
      }
    },
    "serve": {
      "executor": "@ha/nx-executors:telepresence",
      "options": {
        "port": 8123
      }
    },
    "start/dev": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "docker run --name home-assistant --rm -t $(cat intercept.env | sed -n \"/^[^\t]/s/=.*//p\" | sed \"/^$/d\" | sed \"s/^/-e /g\" | tr \"\n\" \" \") --env HASS_SERVER=\"http://localhost:8123\" --env \"TELEPRESENCE_ROOT=/tmp\" -v \"$PWD/src:/home-assistant-src\" -v \"$PWD/.tmp/config:/tmp\" -p \"8123:8123\" \"docker-registry:5000/home-assistant:latest\"",
        "cwd": "apps/home-assistant"
      }
    }
  },
  "tags": [],
  "implicitDependencies": [
    "docker-registry-creds",
    "home-assistant-config-applicator",
    "frigate",
    "influxdb",
    "mqtt",
    "secrets",
    "zwavejs"
  ]
}
