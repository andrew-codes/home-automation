{
  "private": true,
  "name": "@ha/external-services-dns-updater-app",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "node -r esbuild-register build.ts",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/external-services-dns-updater:latest\" --context dir:///workspace/ --insecure --cache=true",
    "start": "scripts/bin/start.sh",
    "start/dev": "nodemon src/index.ts --inspect=0.0.0.0:9233"
  },
  "nx": {
    "targets": {
      "clean": {
        "outputs": [
          "dist"
        ]
      },
      "compile": {
        "outputs": [
          "dist"
        ]
      },
      "image/push": {
        "dependsOn": [
          {
            "target": "compile",
            "projects": "self"
          }
        ]
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@ha/build-ts": "^0.0.1",
    "@ha/mqtt-client": "^0.0.1",
    "async-mqtt": "^2.6.1",
    "debug": "^4.3.1",
    "esbuild-register": "^3.3.2",
    "googleapis": "^92.0.0",
    "nodemon": "^2.0.6"
  }
}
