{
  "root": "apps/alexa-shopping-list-updater-skill",
  "sourceRoot": "apps/alexa-shopping-list-updater-skill/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["dist", ".test-runs"],
      "options": {
        "command": "rm -rf dist .test-runs"
      }
    },
    "compile": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["apps/alexa-shopping-list-updater-skill/dist"],
      "options": {
        "command": "node -r esbuild-register build.ts"
      }
    },
    "image/push": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [
        {
          "target": "compile",
          "projects": "self"
        }
      ],
      "options": {
        "command": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/alexa-shopping-list-updater-skill:latest\" --context dir:///workspace/ --insecure --cache=true"
      }
    },
    "serve": {
      "executor": "@ha/nx-executors:telepresence",
      "dependsOn": [
        {
          "target": "compile",
          "projects": "dependencies"
        }
      ]
    },
    "start/dev": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "nodemon src/index.ts --inspect=0.0.0.0:9233",
        "cwd": "apps/alexa-shopping-list-updater-skill"
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [".test-runs/unit"],
      "options": {
        "command": "jest"
      }
    }
  },
  "tags": [],
  "implicitDependencies": []
}
