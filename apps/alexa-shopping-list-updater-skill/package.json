{
  "private": true,
  "name": "@ha/alexa-shopping-list-updater-skill-app",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "node -r esbuild-register build.ts",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/alexa-shopping-list-updater-skill:latest\" --context dir:///workspace/ --insecure --cache=true",
    "start": "scripts/bin/start.sh",
    "start/dev": "nodemon src/index.ts --inspect=0.0.0.0:9233"
  },
  "nx": {
    "targets": {
      "clean": {
        "outputs": [
          "dist"
        ]
      },
      "compile": {
        "outputs": [
          "dist"
        ]
      },
      "image/push": {
        "dependsOn": [
          {
            "target": "compile",
            "projects": "self"
          }
        ]
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "apollo-fetch": "^0.7.0",
    "ask-sdk-core": "^2.10.2",
    "ask-sdk-express-adapter": "^2.10.2",
    "ask-sdk-model": "^1.35.1",
    "debug": "^4.3.1",
    "esbuild-register": "^3.3.2",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.6"
  }
}
