{
  "private": true,
  "name": "@ha/graphql-api-app",
  "version": "0.0.1",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && rm -rf src/generated",
    "start": "nodemon src/index.ts --inspect=0.0.0.0:9233",
    "precompile": "rm -rf src/generated && yarn generateTypes",
    "compile": "ncc build src/index.ts -o dist -m",
    "generateTypes": "ts-node src/schema/index.ts",
    "image/local": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --no-push --dockerfile /workspace/dev.Dockerfile --destination graphql-api:latest --tarPath \"image.tar\" --context dir:///workspace/ && docker image load --input \"$PWD/image.tar\"",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"$DOCKER_REGISTRY_DOMAIN:5000/graphql-api:latest\" --context dir:///workspace/ --insecure",
    "test": "jest"
  },
  "peerDependencies": {
    "graphql": "^15.1.0"
  },
  "dependencies": {
    "@nexus/schema": "^0.20.1",
    "altair-express-middleware": "^3.0.0",
    "async-mqtt": "^2.6.1",
    "body-parser-graphql": "^1.1.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.1.0",
    "homeassistant": "^0.2.0",
    "lodash": "^4.17.20",
    "nexus": "^1.0.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.1",
    "node-unifiapi": "^0.0.54",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.3",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
