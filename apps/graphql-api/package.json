{
  "private": true,
  "name": "@ha/graphql-api-app",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && rm -rf src/generated",
    "compile": "ncc build src/index.ts -o dist -m",
    "generateTypes": "ts-node src/schema/index.ts",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/graphql-api:latest\" --context dir:///workspace/ --insecure --cache=true",
    "precompile": "rm -rf src/generated && yarn generateTypes",
    "start": "scripts/bin/start.sh",
    "start/dev": "nodemon src/index.ts --inspect=0.0.0.0:9233"
  },
  "peerDependencies": {
    "graphql": "^15.1.0"
  },
  "dependencies": {
    "@ha/string-utils": "^0.0.1",
    "@nexus/schema": "^0.20.1",
    "apollo-server-express": "^2.19.1",
    "async-mqtt": "^2.6.1",
    "body-parser-graphql": "^1.1.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "graphql": "^15.1.0",
    "graphql-subscriptions": "^1.1.0",
    "homeassistant": "^0.2.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.2.2",
    "nexus": "^1.0.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.1",
    "node-unifiapi": "^0.0.54",
    "subscriptions-transport-ws": "^0.9.18",
    "uuid": "^8.3.2",
    "wait": "^0.4.2"
  },
  "devDependencies": {
    "@ha/ts-config": "^0.0.1",
    "@zeit/ncc": "^0.22.3",
    "nodemon": "^2.0.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  }
}
