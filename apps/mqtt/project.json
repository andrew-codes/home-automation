{
  "root": "apps/mqtt",
  "sourceRoot": "apps/mqtt",
  "projectType": "application",
  "targets": {
    "deploy": {
      "executor": "@ha/nx-executors:run-with-az",
      "options": {
        "cwd": "apps/mqtt",
        "command": "./scripts/bin/deploy.sh"
      },
      "dependsOn": [{ "target": "image/push", "projects": "self" }]
    },
    "initialize-secrets": {
      "executor": "@ha/nx-executors:initialize-secrets",
      "options": {
        "keyVaultName": "kv-home-automation",
        "secrets": ["mqtt-USERNAME", "mqtt-PASSWORD"]
      }
    },
    "image/push": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/mqtt-client:latest\" --context dir:///workspace/ --insecure --cache=true",
        "cwd": "apps/mqtt"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["secrets"]
}
