#!/bin/sh

cd /Users/{{ ansibleUser }}/backup
NAME=$(scutil --get ComputerName | sed "s/[ ']/-/g")
ssh -p 22 -i ~/.ssh/nas_rsa hl@10.5.113.53 "mkdir -p -- '/volume1/backup/$NAME/{{ ansibleUser }}'; touch '/volume1/backup/$NAME/{{ ansibleUser }}/backup.marker'"
./time-machine/rsync_tmbackup.sh --id_rsa ~/.ssh/nas_rsa --rsync-append-flags "--exclude-from excludes.txt --no-perms --no-group" /Users/{{ ansibleUser }} hl@10.5.113.53:/volume1/backup/$NAME/{{ ansibleUser }}
