{
  "private": true,
  "name": "@ha/guest-wifi-updater-app",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "node -r esbuild-register build.ts",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"docker-registry:5000/guest-wifi-updater:latest\" --context dir:///workspace/ --insecure --cache=true",
    "start": "scripts/bin/start.sh",
    "stop": "scripts/bin/stop.sh"
  },
  "nx": {
    "targets": {
      "clean": {
        "outputs": [
          "dist"
        ]
      },
      "compile": {
        "outputs": [
          "dist"
        ]
      },
      "image/push": {
        "dependsOn": [
          {
            "target": "compile",
            "projects": "self"
          }
        ]
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@ha/mqtt-client": "^0.0.1",
    "@ha/unifi-client": "^0.0.1",
    "async-mqtt": "^2.6.1",
    "debug": "^4.3.1",
    "esbuild-register": "^3.3.2",
    "lodash": "^4.17.21",
    "node-unifi": "^2.0.3",
    "nodemon": "^2.0.6",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.1.5"
  }
}
