{
  "private": true,
  "name": "@ha/captive-portal-app",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "ncc build src/index.ts -o dist -m",
    "start": "scripts/bin/start.sh",
    "start/dev": "nodemon src/index.ts --inspect=0.0.0.0:9229",
    "postcompile": "cp -r src/static dist/static",
    "image/push": "docker run -v $PWD:/workspace gcr.io/kaniko-project/executor:latest --dockerfile /workspace/Dockerfile --destination \"$DOCKER_REGISTRY_DOMAIN:5000/captive-portal:latest\" --context dir:///workspace/ --insecure-registry --insecure --cache=true"
  },
  "dependencies": {
    "apollo-fetch": "^0.7.0",
    "debug": "^4.3.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@ha/ts-config": "^0.0.1",
    "@zeit/ncc": "^0.22.3",
    "nodemon": "^2.0.6"
  }
}
