{
  "name": "pihole",
  "root": "apps/pihole",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pihole",
  "projectType": "application",
  "targets": {
    "deploy": {
      "executor": "@ha/nx-executors:invoke",
      "options": {
        "cwd": "{projectRoot}",
        "module": "scripts/deploy.ts"
      }
    },
    "update": {
      "executor": "@ha/nx-executors:invoke",
      "options": {
        "cwd": "{projectRoot}",
        "module": "scripts/update.ts"
      }
    },
    "clean/provision": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/.terraform",
        "{projectRoot}/.terraform.lock.hcl",
        "{projectRoot}/.terraform.tfstate.lock.info",
        "{projectRoot}/terraform.tfstate",
        "{projectRoot}/tfplan"
      ],
      "options": {
        "command": "rm -rf .terraform .terraform.lock.hcl .terraform.tfstate.lock.info terraform.tfstate tfplan",
        "cwd": "{projectRoot}"
      }
    },
    "provision": {
      "executor": "@ha/nx-executors:invoke",
      "options": {
        "module": "scripts/provision.ts",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["secrets"]
}
